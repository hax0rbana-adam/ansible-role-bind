# {{ ansible_managed }}

{% for zone in bind9_zones %}
zone "{{ zone.name }}" {
    {% if bind9_master_name == bind9_hostname %}
    type master;
    {% else %}
    type slave;
    {% endif %}

    file "/etc/bind/db.{{ zone.name }}";

    {# master config #}
    {% if bind9_master_name == bind9_hostname %}
    notify yes;
    allow-transfer {
        {{ zone.allow_transfer | join(';') }};
    };

    {# slave config #}
    {% else %}
    masters {
        {{ zone.master | join(';') }};
    };
    {% endif %}
};
{% endfor %}

