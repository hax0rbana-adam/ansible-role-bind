; {{ ansible_managed }}

$TTL    604800
@       IN      SOA     {{ bind9_hostname }}.{{ item.name }}. root.{{ item.name }}. (
                        {{ item.serial }}  ; Serial
                        {{ item.refresh }} ; Refresh
                        {{ item.retry }}   ; Retry
                        {{ item.expire }}  ; Expire
                        {{ item.ttl}} )    ; Negative Cache TTL
;

@       IN      NS      {{ bind9_hostname }}.{{ item.name }}.
{{ bind9_hostname }}       IN      A       {{ ansible_default_ipv4.address }}
@       IN      AAAA    ::1

{% for record in item.records %}
{{ record.name }}       IN      {{ record.type }}       {{ record.value }}
{% endfor %}
